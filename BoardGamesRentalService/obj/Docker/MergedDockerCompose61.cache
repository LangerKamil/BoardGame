services:
  angular-docker:
    build:
      context: .
      dockerfile: GamesRental.View/Dockerfile
    ports:
    - mode: ingress
      target: 4200
      published: 4200
      protocol: tcp
  boardgamesrentalservice:
    build:
      context: .
      dockerfile: BoardGamesRentalService/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    expose:
    - "8080"
    image: boardgamesrentalservice
    ports:
    - mode: ingress
      target: 80
      protocol: tcp
    - mode: ingress
      target: 443
      protocol: tcp
    - mode: ingress
      target: 8080
      published: 8080
      protocol: tcp
    volumes:
    - type: bind
      source: C:\Users\Env3lope\AppData\Roaming/Microsoft/UserSecrets
      target: /root/.microsoft/usersecrets
      read_only: true
      bind:
        create_host_path: true
    - type: bind
      source: C:\Users\Env3lope\AppData\Roaming/ASP.NET/Https
      target: /root/.aspnet/https
      read_only: true
      bind:
        create_host_path: true
  sql-server:
    build:
      context: .
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Express
    image: mcr.microsoft.com/mssql/server:2019-CU13-ubuntu-20.04
    ports:
    - mode: ingress
      target: 1433
      published: 1433
      protocol: tcp